(defvar my-packages
  '(ack-and-a-half
    ace-jump-mode
    ace-window
    auctex
    auto-complete
    clojure-mode
    coffee-mode
    cyberpunk-theme
    deft
    elm-mode
    evil
    evil-commentary
    evil-matchit
    evil-rails
    evil-surround
    evil-tabs
    exec-path-from-shell
    expand-region
    flx-ido
    flycheck
    gist
    haml-mode
    haskell-mode
    haskell-mode
    helm
    helm-ag
    helm-projectile
    inf-ruby
    magit
    markdown-mode
    multi-term
    persp-projectile
    perspective
    powerline
    projectile
    rainbow-mode
    rbenv
    robe
    sass-mode
    scss-mode
    solarized-theme
    solarized-theme
    yasnippet
   )
  "A list of packages to ensure are installed at launch.")

(defun my-packages-installed-p ()
  (loop for p in my-packages
        when (not (package-installed-p p)) do (return nil)
        finally (return t)))

(unless (my-packages-installed-p)
  ;; check for new packages (package versions)
  (package-refresh-contents)
  ;; install the missing packages
  (dolist (p my-packages)
    (when (not (package-installed-p p))
      (package-install p))))

